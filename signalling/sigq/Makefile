# Makefile
#  Generated by the genmk.sh utility.

ALL := sigq_rcv sigq_snd

CC=${CROSS_COMPILE}gcc
CL=${CROSS_COMPILE}clang

CFLAGS=-Wall
CFLAGS_DBG=-g -ggdb -gdwarf-4 -O0 -Wall -Wextra
CFLAGS_DBG_ASAN= -fsanitize=address
CFLAGS_DBG_UB= -fsanitize=undefined

all: ${ALL}
CB_FILES := *.[ch]


common.o: ../../common.c ../../common.h
	${CC} ${CFLAGS} -c ../../common.c -o common.o
common_dbg.o: ../../common.c ../../common.h
	${CC} ${CFLAGS_DBG} -c ../common.c -o common_dbg.o


sigq_rcv: common.o sigq_rcv.o
	${CC} ${CFLAGS} -o sigq_rcv sigq_rcv.c common.o
sigq_rcv_dbg.o: sigq_rcv.c
	${CC} ${CFLAGS_DBG} -c sigq_rcv.c -o sigq_rcv_dbg.o
sigq_rcv_dbg: sigq_rcv_dbg.o common_dbg.o
	${CC} -o sigq_rcv_dbg sigq_rcv_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_ASAN} -o sigq_rcv_asan sigq_rcv_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_UB} -o sigq_rcv_ub sigq_rcv_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_MSAN} -o sigq_rcv_msan sigq_rcv_dbg.o common_dbg.o


sigq_snd: common.o sigq_snd.o
	${CC} ${CFLAGS} -o sigq_snd sigq_snd.c common.o
sigq_snd_dbg.o: sigq_snd.c
	${CC} ${CFLAGS_DBG} -c sigq_snd.c -o sigq_snd_dbg.o
sigq_snd_dbg: sigq_snd_dbg.o common_dbg.o
	${CC} -o sigq_snd_dbg sigq_snd_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_ASAN} -o sigq_snd_asan sigq_snd_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_UB} -o sigq_snd_ub sigq_snd_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_MSAN} -o sigq_snd_msan sigq_snd_dbg.o common_dbg.o

# indent- "beautifies" C code into the "Linux kernel style".
# (cb = C Beautifier :) )
# Note! original source file(s) is overwritten, so we back it up.
cb: ${CB_FILES}
	mkdir bkp 2> /dev/null; cp -f ${CB_FILES} bkp/
	indent -linux ${CB_FILES}

clean:
	rm -vf ${ALL} core* vgcore* *.o *~
