# Makefile
#  Generated by the genmk.sh utility.

ALL := forkbomb1

CC=${CROSS_COMPILE}gcc
CL=${CROSS_COMPILE}clang

CFLAGS=-Wall
CFLAGS_DBG=-g -ggdb -gdwarf-4 -O0 -Wall -Wextra
CFLAGS_DBG_ASAN= -fsanitize=address
CFLAGS_DBG_UB= -fsanitize=undefined

all: ${ALL}
CB_FILES := *.[ch]


common.o: ../common.c ../common.h
	${CC} ${CFLAGS} -c ../common.c -o common.o
common_dbg.o: ../common.c ../common.h
	${CC} ${CFLAGS_DBG} -c ../common.c -o common_dbg.o


forkbomb1: common.o forkbomb1.o
	${CC} ${CFLAGS} -o forkbomb1 forkbomb1.c common.o
forkbomb1_dbg.o: forkbomb1.c
	${CC} ${CFLAGS_DBG} -c forkbomb1.c -o forkbomb1_dbg.o
forkbomb1_dbg: forkbomb1_dbg.o common_dbg.o
	${CC} -o forkbomb1_dbg forkbomb1_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_ASAN} -o forkbomb1_asan forkbomb1_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_UB} -o forkbomb1_ub forkbomb1_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_MSAN} -o forkbomb1_msan forkbomb1_dbg.o common_dbg.o

# indent- "beautifies" C code into the "Linux kernel style".
# (cb = C Beautifier :) )
# Note! original source file(s) is overwritten, so we back it up.
cb: ${CB_FILES}
	mkdir bkp 2> /dev/null; cp -f ${CB_FILES} bkp/
	indent -linux ${CB_FILES}

clean:
	rm -vf ${ALL} core* vgcore* *.o *~
