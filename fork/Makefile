# Makefile
#  Generated by the genmk.sh utility.
ALL := fork_ret fork_data_addr wait_fail mysh_simple mysh fork2c orphan zombie forkbomb1

CC=${CROSS_COMPILE}gcc
CL=${CROSS_COMPILE}clang

CFLAGS=-Wall
CFLAGS_DBG=-g -ggdb -gdwarf-4 -O0 -Wall -Wextra
CFLAGS_DBG_ASAN= -fsanitize=address
CFLAGS_DBG_UB= -fsanitize=undefined

all: ${ALL}
CB_FILES := *.[ch]

common.o: ../common.c ../common.h
	${CC} ${CFLAGS} -c ../common.c -o common.o
common_dbg.o: ../common.c ../common.h
	${CC} ${CFLAGS_DBG} -c ../common.c -o common_dbg.o


fork_ret: common.o fork_ret.o
	${CC} ${CFLAGS} -o fork_ret fork_ret.c common.o
fork_ret_dbg.o: fork_ret.c
	${CC} ${CFLAGS_DBG} -c fork_ret.c -o fork_ret_dbg.o
fork_ret_dbg: fork_ret_dbg.o common_dbg.o
	${CC} -o fork_ret_dbg fork_ret_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_ASAN} -o fork_ret_asan fork_ret_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_UB} -o fork_ret_ub fork_ret_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_MSAN} -o fork_ret_msan fork_ret_dbg.o common_dbg.o

fork_data_addr: common.o fork_data_addr.o
