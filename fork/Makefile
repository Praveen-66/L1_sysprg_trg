	${CL} ${CFLAGS_DBG_ASAN} -o fork_data_addr_asan fork_data_addr_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_UB} -o fork_data_addr_ub fork_data_addr_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_MSAN} -o fork_data_addr_msan fork_data_addr_dbg.o common_dbg.o

