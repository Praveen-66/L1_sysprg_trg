# Makefile
#  Generated by the genmk.sh utility.
ALL := vaddr_process vaddr_process_32

CC=${CROSS_COMPILE}gcc
CL=${CROSS_COMPILE}clang

CFLAGS=-Wall
CFLAGS_DBG=-g -ggdb -gdwarf-4 -O0 -Wall -Wextra
CFLAGS_DBG_ASAN= -fsanitize=address
CFLAGS_DBG_UB= -fsanitize=undefined

all: ${ALL}
CB_FILES := *.[ch]

common.o: ../common.c ../common.h
	${CC} ${CFLAGS} -c ../common.c -o common.o
common_dbg.o: ../common.c ../common.h
	${CC} ${CFLAGS_DBG} -c ../common.c -o common_dbg.o

vaddr_process: common.o vaddr_process.o
	${CC} ${CFLAGS} -o vaddr_process vaddr_process.c common.o
vaddr_process_dbg.o: vaddr_process.c
	${CC} ${CFLAGS_DBG} -c vaddr_process.c -o vaddr_process_dbg.o
vaddr_process_dbg: vaddr_process_dbg.o common_dbg.o
	${CC} -o vaddr_process_dbg vaddr_process_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_ASAN} -o vaddr_process_asan vaddr_process_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_UB} -o vaddr_process_ub vaddr_process_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_MSAN} -o vaddr_process_msan vaddr_process_dbg.o common_dbg.o

common_32.o: ../common.c ../common.h
	${CC} ${CFLAGS} -m32 -c ../common.c -o common_32.o
vaddr_process_32: common_32.o vaddr_process.o
	${CC} ${CFLAGS} -m32 -o vaddr_process_32 vaddr_process.c common_32.o

# indent- "beautifies" C code into the "Linux kernel style".
# (cb = C Beautifier :) )
# Note! original source file(s) is overwritten, so we back it up.
cb: ${CB_FILES}
	mkdir bkp 2> /dev/null; cp -f ${CB_FILES} bkp/
	indent -linux ${CB_FILES}

clean:
	rm -vf ${ALL} core* vgcore* *.o *~
