# Makefile
#  Generated by the genmk.sh utility.
ALL := exec_poc envp

CC=${CROSS_COMPILE}gcc
CL=${CROSS_COMPILE}clang

CFLAGS=-Wall
CFLAGS_DBG=-g -ggdb -gdwarf-4 -O0 -Wall -Wextra
CFLAGS_DBG_ASAN= -fsanitize=address
CFLAGS_DBG_UB= -fsanitize=undefined

all: ${ALL}
CB_FILES := *.[ch]

common.o: ../common.c ../common.h
	${CC} ${CFLAGS} -c ../common.c -o common.o
common_dbg.o: ../common.c ../common.h
	${CC} ${CFLAGS_DBG} -c ../common.c -o common_dbg.o

exec_poc: common.o exec_poc.o
	${CC} ${CFLAGS} -o exec_poc exec_poc.c common.o
exec_poc_dbg.o: exec_poc.c
	${CC} ${CFLAGS_DBG} -c exec_poc.c -o exec_poc_dbg.o
exec_poc_dbg: exec_poc_dbg.o common_dbg.o
	${CC} -o exec_poc_dbg exec_poc_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_ASAN} -o exec_poc_asan exec_poc_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_UB} -o exec_poc_ub exec_poc_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_MSAN} -o exec_poc_msan exec_poc_dbg.o common_dbg.o

envp: common.o envp.o
	${CC} ${CFLAGS} -o envp envp.c common.o
envp_dbg.o: envp.c
	${CC} ${CFLAGS_DBG} -c envp.c -o envp_dbg.o
envp_dbg: envp_dbg.o common_dbg.o
	${CC} -o envp_dbg envp_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_ASAN} -o envp_asan envp_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_UB} -o envp_ub envp_dbg.o common_dbg.o
	${CL} ${CFLAGS_DBG_MSAN} -o envp_msan envp_dbg.o common_dbg.o

# indent- "beautifies" C code into the "Linux kernel style".
# (cb = C Beautifier :) )
# Note! original source file(s) is overwritten, so we back it up.
cb: ${CB_FILES}
	mkdir bkp 2> /dev/null; cp -f ${CB_FILES} bkp/
	indent -linux ${CB_FILES}

clean:
	rm -vf ${ALL} core* vgcore* *.o *~
